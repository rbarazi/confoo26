# Rails Project Environment Variables

RAILS_ENV=development

# Database configuration
# For SQLite (default): No DATABASE_URL needed, uses config/database.yml
# For Postgres: Uncomment postgres service in compose.yaml and set:
# DATABASE_URL=postgres://postgres:postgres@postgres:5432/app_development
# DB_HOST=postgres

# Solid Queue configuration
# Set to "true" if your app has queue database configured and you want
# Solid Queue to run as a Puma plugin (default: false for SQLite-based apps)
# SOLID_QUEUE_IN_PUMA=false

# Devcontainer sync strategy (copy or symlink; default is copy)
# BRANCHBOX_DEVCONTAINER_STRATEGY=copy

# Devcontainer image pull behavior: "missing" (default), "always", or "build"
# DEVCONTAINER_PULL_POLICY=missing
# Override pre-built image (uses official BranchBox image by default)
# DEVCONTAINER_IMAGE=ghcr.io/your-org/your-repo/devcontainer:latest

# BranchBox configuration (required for feature worktrees)
# Note: WORK_FEATURE and DEVCONTAINER_NAME are set automatically per worktree
APP_URL=dev.localhost:3000
# Optional: explicitly set the base app name used for devcontainer/project labels
# APP_NAME=rails-project
