<h1>Sign in</h1>

<%= form_with url: session_path, scope: :session do |form| %>
  <p>
    <%= form.label :email_address, "Email address" %><br>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params.dig(:session, :email_address) %>
  </p>

  <p>
    <%= form.label :password, "Password" %><br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72 %>
  </p>

  <%= form.submit "Sign in" %>
<% end %>

<%= link_to "Forgot password?", new_password_path %>
